@using System.Collections
@using System.Web.Mvc

@model int?

@{
    var list = ViewData["List"] as List<SelectListItem>;
}

<ul style="list-style:none;">
    @foreach (var item in list)
    {
        <li>
            @{
                var radioID = ViewData.TemplateInfo.GetFullHtmlFieldId(item.Value);
                var name = ViewData.TemplateInfo.GetFullHtmlFieldName("");
                var checkedClass = item.Value == Model.ToString()
                                    ? "checked"
                                    : string.Empty;
                <input type="radio" id="@radioID" name="@ViewData.TemplateInfo.HtmlFieldPrefix"
                       value="@item.Value" @checkedClass />
                <label for="@radioID">@item.Text</label>
            }
        </li>
    }
</ul>

